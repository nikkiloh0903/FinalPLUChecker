<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nikki.plucheck.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="Search"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSearch"
                android:layout_weight="1"
                android:drawableTop="@drawable/search"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:text="Saved"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSaved"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="30sp"
                android:drawableTop="@drawable/aftersave" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextBrand"
            android:hint="Brand"
            android:textAlignment="center"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextProductName"
            android:textAlignment="center"
            android:hint="Product Name"
            android:layout_marginTop="35dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextSKU"
            android:textAlignment="center"
            android:hint="SKU Number"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextPLU"
            android:hint="PLU Number"
            android:textAlignment="center"
            android:layout_marginTop="50dp" />

        <Button
            android:text="Add Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonadd"
            android:layout_marginTop="0dp" />

    </LinearLayout>

</RelativeLayout>
